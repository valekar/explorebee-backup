<div ng-controller="PlaceNewController">
<h1>Listing places</h1>

 <div class="row large-12 columns">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <div class="divider"></div>
      <th>Description</th>
      <div class="divider"></div>
      <th>Detail Description</th>
      <div class="divider"></div>
      <th>Attach a Video</th>
      <div class="divider"></div>
      <th>show</th>
      <th>Edit</th>
      <th>Delete</th>

    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.description %></td>
        <td><%= place.detail_description %></td>

        <td><textarea ng-model="description"></textarea>

          <input type="file" ng-file-select="onVideoAttach($files,<%=place.id %>)" multiple>

          <div class="drop-box" ng-file-drop="onVideoAttach($files, <%=place.id %>)" ng-file-drag-over-class="optional-css-class"
               ng-show="dropSupported">drop files here</div>
          <div ng-file-drop-available="dropSupported=true"
               ng-show="!dropSupported">HTML5 Drop File is not supported!</div>

        </td>


        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 </div>
<br>

<%= link_to 'New Place', new_place_path,class:"button" %>

</div>