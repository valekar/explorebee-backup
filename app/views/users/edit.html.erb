<% provide(:title, "Edit user") %>


<div class="row">
      <h1>Settings</h1>

  <div class="large-4 columns">
    <ul class="side-nav">
      <li><%=link_to_unless_current "Edit Settings", edit_user_path(current_user) %></li>
      <li><%= link_to_unless_current "Personalize", specs_edit_path %> </li>
    </ul>

  </div>


  <div class="large-8 columns">
    <h2>Update your profile</h2>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Save changes", class: "tiny button" %>
    <% end %>


  </div>
     <hr>


</div>