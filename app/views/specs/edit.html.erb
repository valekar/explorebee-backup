<% provide(:title, "Personalize") %>


<div class="row">
  <h1>Settings</h1>

  <div class="large-4 columns">
    <ul class="side-nav">
      <li><%=link_to_unless_current "Edit Settings", edit_user_path(current_user) %></li>
      <li><%= link_to_unless_current "Personalize", specs_edit_path %> </li>
    </ul>

  </div>


  <div class="large-8 columns">
    <h2>Personalize</h2>
    <%=form_for :spec  do |f|  %>

          <%= f.label :phone %>
           <%= f.text_field :phone %>

        <%= f.label :address %>
        <%= f.text_area :address %>

        <%= f.label :location %>
        <%= f.text_field :location %>




        <%= f.submit "Save changes", class: "tiny button" %>


    <%end%>


  </div>



</div>